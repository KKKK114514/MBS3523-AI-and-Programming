import cv2
import numpy
print(cv2.__version__)

cam = cv2.VideoCapture(0)

while True:
    ret, frame = cam.read()
    cv2.imshow('Window', frame)

    frameHSV = cv2.cvtColor( frame, cv2.COLOR_BGR2HSV)
    cv2.imshow("Window HSV", frameHSV)

    frameGray = cv2.cvtColor( frame, cv2.COLOR_BGR2GRAY)
    cv2.imshow('Window Gray', frameGray)

    frameCanny = cv2.Canny(frame, 100, 100)
    cv2.imshow('Window Canny', frameCanny)

    frameTx = cv2.flip(frame,1)
    frameTxTx = numpy.hstack((frame, frameTx))

    frameTyTy = cv2.flip(frameTxTx, 0)
    frameTxTy = numpy.vstack((frameTxTx, frameTyTy))
    frameTxTy = cv2.resize(frameTxTy, (620,480))

    cv2.imshow('Window', frameTxTy)


    if cv2.waitKey(20) & 0xff == ord('q'):
        break

cam.release()
cv2.destroyAllWindows()
